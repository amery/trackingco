html, body
  min-height 100vh
body
  background-color #FDEECD
#main
  margin 0 0 0 12px
.title
  color inherit
.subtitle
  color inherit
.content
  color inherit
.table
  color inherit
  background-color inherit
a
  color #8884b8
  &:hover
    color #EAB05E
  &:active
    color #ADBBEC
nav
  &.nav
    background-color transparent
.card-header-title
  small
    margin 0 5px
    font-weight normal
    color #bbb
    .react-tangle-input
      color #676
      border-bottom 1px dashed #676 !important
      width 24px
      margin 0 2px
      text-align right !important
  div
    display inline
.card
  &.empty
    border 24px #bbb dotted
    height 242px
  &.site
    margin 0 5px
    .card-header-title
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
    [contenteditable]
      min-width 90px
    [contenteditable]:focus
      outline none
      box-shadow none
      -webkit-box-shadow none
      border-color inherit
    .fa
      &.placeholder
        display none
    &:active
      .recharts-responsive-container
        display none
      .fa
        &.placeholder
          display block
          margin-top 50px
          height 150px
          font-size 100px
          color #bbb
    .card-footer-item
      &.danger
        background-color #ff3860
        color #fff
      &.save
        background-color #3273dc
        color #fff
  &.newsite
    &:hover
      color #bbb
    .card-content
      text-align center
      cursor pointer
    i
      &.fa
        font-size 7em
        display inline-block
        margin 30px 0
    button
      margin-top 5px
  &.detail-trackingcode
    code
      white-space pre-wrap
  &.account-plan
    li
      display inline-block
      margin 6px
  &.account-billing-history
    .payment
      & > *
        display inline-block
        margin 2px
  &.detail-chart-main
    .recharts-wrapper
      margin-left 21px
  &.detail-table
    td
      &:first-child
        max-width 120px
        text-overflow ellipsis
        overflow hidden
        white-space nowrap
      &:nth-child(2)
        text-align right
    tr
      &:hover
        td
          &:first-child
            white-space pre-line
            text-overflow initial
            word-break break-all
  &.account-colours
    .colours
      & > div
        display inline-block
        &:not(:last-child)
          margin-right 5px
    .twitter-picker
      position absolute !important
      z-index 12
  &.account-domains
    li
      &:not(:last-child)
        margin-bottom 5px
  &.account-payments
    .charge
      font-family monospace
      font-size 110%
      white-space pre-wrap
      word-break break-all
      .title
        text-align center
      canvas
        display block
        margin auto
        width 260px
        height 260px
.card.account-domains,
.card.account-info,
.card.account-colours,
.card.account-payments,
.card.detail-chart-main,
.card.detail-chart-individualsessions,
.card.detail-table,
.card.detail-today,
.card.detail-trackingcode,
.card.detail-about
  margin 12px 12px 12px 0
.custom-tooltip
  padding 12px
  background white
  font-size 1.3em
  .recharts-tooltip-label
    text-align center
    margin-bottom 4px
  .recharts-tooltip-item-list
    text-align right
.card.account-info table td,
.card.account-info table th,
  vertical-align middle
  .card
    &.account-payments
      .pay
        text-align center
        margin 32px
button[title]
  overflow visible
[title]
  position relative
[title]:before,
[title]:after
  -ms-filter "progid:DXImageTransform.Microsoft.Alpha(Opacity=0)"
  -khtml-opacity 0
  -moz-opacity 0
  opacity 0
  pointer-events none
  -webkit-transition all 0.18s ease-out 0.18s
  transition all 0.18s ease-out 0.18s
  bottom 100%
  left 50%
  position absolute
  z-index 10
  -webkit-transform translate(-50%, 10px)
  -ms-transform translate(-50%, 10px)
  transform translate(-50%, 10px)
  -webkit-transform-origin top
  -ms-transform-origin top
  transform-origin top
[title]:after
  background rgba(17, 17, 17, 0.9)
  border-radius 4px
  color #fff
  content attr(title)
  font-size 12px
  padding .5em 1em
  white-space nowrap
  margin-bottom 11px
[title]:before
  background url('data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D%22http%3A//www.w3.org/2000/svg%22%20width%3D%2236px%22%20height%3D%2212px%22%3E%3Cpath%20fill%3D%22rgba%2817,%2017,%2017,%200.9%29%22%20transform%3D%22rotate%280%29%22%20d%3D%22M2.658,0.000%20C-13.615,0.000%2050.938,0.000%2034.662,0.000%20C28.662,0.000%2023.035,12.002%2018.660,12.002%20C14.285,12.002%208.594,0.000%202.658,0.000%20Z%22/%3E%3C/svg%3E') no-repeat;
  background-size 100% auto
  height 6px
  width 18px
  content ""
  margin-bottom 5px
[title]:hover:before,
[title]:hover:after
  -ms-filter "progid:DXImageTransform.Microsoft.Alpha(Opacity=100)"
  -khtml-opacity 1
  -moz-opacity 1
  opacity 1
  pointer-events auto
  -webkit-transform translate(-50%, 0)
  -ms-transform translate(-50%, 0)
  transform translate(-50%, 0)
